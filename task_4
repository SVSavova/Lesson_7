import java.util.Scanner;

/*
, Напишете програма, която да проверя дали един триъгълник е равностранен,
равнобедрен или разностранен.
 */
public class task_4 {
    public static void main(String[] args) {
            int a, b, c;

            Scanner scanner = new Scanner(System.in);
            System.out.print("Въведете три числа: ");
            a = scanner.nextInt();
            b = scanner.nextInt();
            c = scanner.nextInt();

             if(( a == b ) && (b == c)){
                 System.out.print(" Триъгълникът е равностранен");
             }
             else if(( a == b ) || (a == c) || (b == c)){
                 System.out.print(" Триъгълникът е равнобедрен");
             }
             else {
                 System.out.print(" Триъгълникът е разностранен");
             }
    }
}
